/* components/own/own.wxss */
.small-background {
  width: 100%;
  height: 12vh;
  background-color: #4076f7;
  overflow: visible;
}

.big-background {
  width: 100%;
  height: 80vh;
  background-color: #f5f5f5
}

.user-info-panel {
  width: 93vw;
  margin-left: 4vw;
  margin-right: 4vw;
  height: 80vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.user-info-background {
  width: 100%;
  height: 18vh;
  background-color: white;
  border-radius: 1vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.user-info-container {
  width: 73vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.userInfo-head-icon {
  border-radius: 50%;
  height: 17vw;
  width: 17vw;
  overflow: hidden;
}

.userInfo-text {
  width: 40vw;
  /* height: 4vh;
  line-height: 4vh; */
  text-align: center;
  color: #8d8d8d;
  font-size: 2.5vh;
  background: none;
}

.userInfo-text::after {
  border: none;
}

.user-info-text-container {
  width: 40vw;
  /* height: 4vh; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.arrow-icon {
  width: 7vw;
  height: 7vw;
}

.wx-userInfo-text {
  float: left;
  /* width: 70%; */
  height: 100%;
}
.userInfo-nickName {
  font-family: MicrosoftYaHei;
	font-size: 2vh;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0vw;
}
.register-state {
  font-family: MicrosoftYaHei;
	font-size: 2vh;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0vw;
	color: #8d8d8d;
  background-color: white;
  padding: 0;
  text-align: left;
  margin: 0;
  height: 10vh;
  line-height: 10vh;
}

.register-state::after {
  border: none
}

.user-items-background {
  width: 100%;
  /* height: 43vh; */
  background-color: white;
  border-radius: 1vh;
}

.user-item-background {
  width: 100%;
  height: 11vh;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  z-index: 1;
}

.user-item-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 79vw;
  z-index: 1;
}

.user-item {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-item-icon {
  width: 4vh;
  height: 4vh;
}

.user-item-text {
  padding-left: 5vw;
  font-family: MicrosoftYaHei;
	font-size: 2.5vh;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0vh;
	color: #000000;
}

.authorize-userInfo-button {
  line-height: 21vh;
  background-color: white;
  height: 100%;
  width: 60%;
  font-size: 1rem;
}
.authorize-userInfo-button::after {
  border: none;
}
.personal-item {
  height: 10vh;
  width: 100%;
  /* border-bottom: 1px solid slategray; */
}
.item-icon {
  width: 5vh;
  height: 5vh;
  margin-left: 3vw;
  float: left;
  margin-top: 4%;
}
.item-text {
  font-size: .8rem;
  color: rgb(34, 34, 34);
  line-height: 10vh;
  text-align: center;
  width: 30vw;
  float: left;
}