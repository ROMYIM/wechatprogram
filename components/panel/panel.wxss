/* components/panel/panel.wxss */
.panel-container {
  width: 100%;
  height: 100%;
  display: block;
}
.panel-title {
  height: 5%;
  position: absolute;
  font-family: '黑体';
  font-size: 2vh;
  left: 3vw;
  top: 2vh;
  color: white;
}
.panel-background {
  width: 100%;
  height: 27vh;
  /* margin-bottom: 3vh; */
  background-repeat:no-repeat; 
  background-size:100% 100%;
  -moz-background-size:100% 100%;
  vertical-align: middle;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around
}
.panel-content {
  width: 100%;
  height: 55vh;
}
.panel-footer {
  width: 100%;
  height: 5%;
  text-align: center;
  font-size: 20rpx;
}