/* components/tabbar/tabbar.wxss */
.tabbar-container {
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  /* flex-direction: row; */
  align-items: flex-end;
  background-repeat:no-repeat; 
  background-size:100% 100%;
  -moz-background-size:100% 100%;
  vertical-align: middle;
}

.tabbar-panel {
  align-items: flex-end;
  width: 80vw;
  height: 8vh;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fcfcfc;
  padding-left: 10vw;
  padding-right: 10vw;
}

.tabbar-background {
  width: 100%;
  height: 100%;
  position: relative;
}

.tabbar-item {
  margin-top: 1vh;
  margin-bottom: 1vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.item-icon {
  width: 4vh;
  height: 4vh;
}

.record-icon {
  width: 6vh;
  height: 6vh;
  overflow: visible;
}

.item-text {
  font-size: 1.5vh;
}