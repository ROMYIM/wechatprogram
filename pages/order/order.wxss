/* pages/order/order.wxss */
.background {
	background-color: #f5f5f5;
	width: 100vw;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.order-state-container {
	margin-top: 2vh;
	width: 90vw;
	padding-left: 5vw;
	padding-right: 5vw;
	height: 15vh;
	background-color: white;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.state-text-container {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	height: 6vh;
	width: 60vw;
}

.state-text {
	font-family: MicrosoftYaHei;
	font-size: 2.5vh;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0vh;
	height: 3vh;
	line-height: 3vh;
}

.state-text.state {
	color: #4077f7;
}

.state-text.indtroduction {
	color: #8d8d8d;
}

.state-picture {
	width: 17vw;
	height: 17vw;
}

.order-item-container {
	width: 92vw;
	padding-left: 4vw;
	padding-right: 4vw;
	background: white;
	margin-top: 2vh;
}

.item-title {
	height: 6vh;
	width: 100%;
	display: flex;
	justify-content: space-between;
	font-family: 黑体;
	font-size: 4vw;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0vh;
	line-height: 6vh;
}

.item-title .no {
	color: #8d8d8d;
}

.item-title .order-type {
	color: #f2373e;
}

.item-detail-container {
	height: 10vh;
	background-color: #f5f5f5;
	padding-top: 2vh;
	padding-bottom: 2vh;
	padding-left: 2vw;
	padding-right: 3vw;
	display: flex;
	justify-content: space-between;
}

.item-detail-picture {
	width: 17vw;
	height: 100%;
}

.family-type-detail {
	width: 55vw;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	overflow: hidden;
}

.item-title.family-type {
	height: auto;
	line-height: 3vh;
	color: black;
}

.item-title.family-type.name {
	font-family:  MicrosoftYaHei-Bold;
}

.item-title.family-type.duration {
	color: #887788;
	font-size: 4vw;
}

.item-contorl {
	width: 100%;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: flex-end;
	height: 7vh;
}

.control-button {
	width: 21vw;
	height: 4vh;
	font-family: MicrosoftYaHei;
	font-size: 2vh;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0vh;
	color: #3770f7;
	margin-right: 3vw;
	border-radius: 1vw;
	border: solid 1rpx #3770f7;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}


.item-price {
	width: 10vw;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: flex-start;
}

.item-price .item-title.family-type.price {
	font-family: 'Consolas';
	color: black;
	height: 3vh;
	line-height: 3vh;
	display: flex;
	flex-direction: row;
	justify-content: flex-end;
}

.no-item-container {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	padding-top: 15vh;
	padding-bottom: 45vh;
	align-items: center;
	justify-content: space-between;
}

.no-item-picture {
	width: 40vw;
	height: 40vw;
}

.no-item-text {
	font-family: MicrosoftYaHei;
	font-size: 2.5vh;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0vh;
	line-height: 4vh;
	text-align: center;
	color: #6f6f6f
}

.detail-container {
	background-color: white
}

.order-item-container.control {
	height: 16vh;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-around;
}