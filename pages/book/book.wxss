/* pages/book/book.wxss */

.background {
  width: 100%;
  height: 100vh;
  background-color: #f5f5f5;
}

.book-contanier {
  background-color: white;
}

.check-in-item {
  width: 90%;
  margin-left: 5%;
  margin-right:  5%;
  height: 13vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
  margin-bottom: 1vh;
}

.date-text {
  font-size: 4vh;
  font-family: '黑体';
  color: #4077f7
}

.date-label {
  font-size: 1.5vh;
  height: 2vh;
  line-height: 2vh;
  color: #737373;
  text-align: center;
}

.date-item {
  direction: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.duration-text {
  border: 1rpx solid #cccccc;
  border-radius: 2vh;
  font-size: 3vh;
  width: 32vw;
  height: 4vh;
  line-height: 4vh; 
  text-align: center;
  color: #4077f7;
}

.people-text {
  font-size: 3vh;
  font-family: '黑体';
  color: #4077f7;
  /* width: 20vw; */

}

.people-label {
  color: #e0e0e0;
  font-size: 4vw;
}

.people-button {
  border: 1rpx solid #e0e0e0;
  width: 11vw;
  height: 6vh;
  line-height: 6vh;
  text-align: center;
  color: black;
  padding: 0;
  margin: 0;
  border-radius: 0;
}

.people-button::after {
  border: none;
}

.people-button.left {
  border-bottom-left-radius: 3vh;
  border-top-left-radius: 3vh;
}

.people-button.right {
  border-bottom-right-radius: 3vh;
  border-top-right-radius: 3vh;
}

.people-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.room-type-container {
  height: 18vh;
  width: 90vw;
  padding-left: 5vw;
  padding-right: 5vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  border-bottom: 1px solid #f5f5f5;
}

.room-container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.room-picture {
  height: 13vh;
  width: 30vw;
}

.room-introduction-container {
  margin-left: 5vw;
  width: 55vw;
  height: 13vh;
  display: flex;
  flex-direction: column;
  
}

.room-type-title {
  height: 4vh;
  line-height: 4vh;
  width: 100%;
  font-family: '黑体';
  font-size: 3vh;
}

.room-introduction-content {
  height: 5vh;
  width: 100%;
  font-size: 2vh;
}

.book-button {
  width: 100%;
  height: 4vh;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.room-money {
  color: #f2373e;
  height: 4vh;
  text-align: left;
  line-height: 4vh;
  font-size: 2.5vh;
}

.button-text {
  color: white;
  background-color: #4077f7;
  border-radius: 2vh;
  font-size: 2vh;
  height: 4vh;
  line-height: 4vh;
  width: 17vw;
  padding: 0;
  margin: 0;
}

.button-text::after {
  border: none;
}

